<div class="container">
  <div class="project-core-info">
    <div class="project-assets-and-info">
      <div class="project-title-and-assets">
        <h1><%= @project.name %> <%= link_to 'edit', edit_project_path(@project) %></h1>
        <div class="project-assets">
          <%= render 'shared/carousel', project: @project %>
        <% if policy(@project).update? %>
          <%= link_to 'add photo/video', new_project_project_asset_url(@project) %>
        <% end %>
        </div>
      </div>
      <div class="project-info">
        <div class="developers">
          <%= render 'shared/avatar_with_name', user: @project.user %>
          <div class="dropdown">
            <div class="dropdown-btn">
              Rest of the team <i class="fas fa-angle-down"></i>
            </div>
            <div class="dropdown-content">
              <% @project.team.each do |user| %>
                <div class="team-member">
                  <%= render 'shared/avatar_with_name', user: user %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
        <div class="ratings">
          <ul>
            <li><strong>Editor's review</strong></li>
            <li>Code quality <%= render 'shared/stars', project: @project %></li>
            <li><strong>User's review</strong></li>
            <li>Comunication <%= render 'shared/stars', project: @project %></li>
            <li>Quality of product <%= render 'shared/stars', project: @project %></li>
            <li>Delivered on time <%= render 'shared/stars', project: @project %></li>
          </ul>
        </div>
        <div class="social-buttons">
          share download coment
        </div>
      </div>
    </div>
    <div class="project-description">
      <%= @project.description %>
    </div>
    <%= link_to 'Contact dev!', edit_project_path(@project), class:'btn btn-primary' %>
  </div>

  <div id="reviews-container">
    <h2>Reviews <span>(<%= @project.reviews.count %>)</span></h2>
    <% if @project.reviews.count.zero? %>
      <p>No reviews yet...</p>
    <% end %>
    <% @project.reviews.each do |review| %>
      <%= render 'review', review: review %>
    <% end %>
  </div>
</div>
