<div class="container-fluid top-margin">
  <div class="col-md-10 col-md-offset-1" >
        <h1><%= @project.name %></h1>
  <div class="project-core-info">
    <div class="project-assets-and-info">
      <div class="project-title-and-assets">
        <div class="project-title">
          <div class="btn" id="edit-btn">edit</div>
        </div>
        <div id="form-modal">
          <div class="modal-content">
            <h2>Edit project</h2>
            <%= render 'form', project: @project, users: @users %>
          </div>
        </div>
        <div class="project-assets">
          <%= render 'shared/carousel', project: @project %>
        <% if policy(@project).update? %>
          <%= link_to 'add photo/video', new_project_project_asset_url(@project) %>
        <% end %>
        </div>
      </div>
      <div class="project-info">

        <div class="developers">
          <%= render 'shared/avatar_with_name', user: @project.user, imgSize: "small" %>
          <div class="dropdown">
            <div class="dropdown-btn">
              Rest of the team <i class="fas fa-angle-down"></i>
            </div>
            <div class="dropdown-content">
              <% @project.team.each do |user| %>
                <div class="team-member">
                  <%= render 'shared/avatar_with_name', user: user, imgSize: "small" %>
                </div>
              <% end %>
            </div>
          </div>

        </div>
        <div class="ratings">
          <ul>
            <li><strong>Editor's review</strong></li>
            <li>Code quality <%= render 'shared/stars', rating: 5 %></li>
            <li><strong>User's review</strong></li>
            <li>Comunication <%= render 'shared/stars', rating: @project.communication_rating %></li>
            <!-- <li>Quality of product <%#= render 'shared/stars', rating: review.quality_rating %></li>
            <li>Delivered on time <%#= render 'shared/stars', rating: review.delivery_on_time_rating %></li> -->
          </ul>
        </div>
        <div class="social-buttons">
          share download coment
        </div>
      </div>
    </div>
    <div class="project-description">
      <%= @project.description %>
    </div>
    <%= link_to 'Make order', new_order_path(project_id: @project.id), class:"btn btn-primary" %>
  </div>

    <h2>Reviews <span>(<%= @project.reviews.count %>)</span></h2>
  <div id="reviews-container">
    <% if @orders_by_user.first %>
      <%= render 'reviews/form', order: @orders_by_user.first, review: Review.new %>
    <% end %>
    <% if @project.reviews.count.zero? %>
      <p>No reviews yet...</p>
    <% end %>
    <% @project.reviews.order(created_at: :desc).each do |review| %>
      <%= render 'review', review: review %>
    <% end %>
  </div>
</div>
</div>
