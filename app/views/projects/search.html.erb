<% if !user_signed_in? %>
<%= render "shared/navbar" %>
<% end %>
<div class="container-fluid" id="banner-landing" style="margin-top: 70px; height: 100vh;">
  <div class="row">
    <div class="col-md-10 col-md-offset-1 ">
      <div class="search-container" style="padding-top: 40px;">
        <form id="search" action="/search" method="get">
          <input id="search-input" type="text" placeholder="Search for an app" name="search">
          <button type="submit"><i class="fa fa-search"></i></button>
        </form>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 col-md-offset-1 ">
      <% @projects.each do |project| %>
      <div class="col-xs-12 col-md-6 card-wrapper">
        <%= link_to project_path(project) do %>
        <%= render 'projects/card_link', project: project %>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
</div>

<%= render "shared/footer" %>
