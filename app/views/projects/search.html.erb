<% if !user_signed_in? %>
<%= render "shared/navbar" %>
<% end %>
<div class="container-fluid" id="banner-landing" style="margin-top: 70px; height: 100vh;">
  <div class="row">
    <div class="col-md-10 col-md-offset-1 ">
      <div id="search-results-container">
        <div id="search-results-description">
          <div>
            <h4>Search results for <span class="bold"><%= params[:search] %></span></h4>
          </div>
          <div>
            <form id="clear-search" action="/" method="get">
              <button type="submit" class="close"><i class="fa fa-times-circle"></i></button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 col-md-offset-1 ">
      <% @projects.each do |project| %>
      <div class="col-xs-12 col-md-6 card-wrapper">
        <%= link_to project_path(project) do %>
        <%= render 'projects/card_link', project: project %>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
</div>
