<div class="card">
  <% if project.project_assets.count != 0 %>
    <div class="card-img" style="background-image: url('<%= project.project_assets.first.photo.identifier %>'); background-position: center; background-size: cover;">
    </div>
  <% else %>
    <div class="card-img" style="background-image: url('https://res.cloudinary.com/dy3nldgkf/image/upload/v1551292620/image-placeholder_3x2.svg'); background-position: center;">
    </div>
  <% end %>
  <div class="card-info">
    <div class="title-rating">
      <h3><%= project.name %></h3>
        <%= render 'shared/stars', project: project %>
    </div>
    <div class="description">
      <p><%= project.description %></p>
    </div>
    <div class="owner-info">
      <div class="avatar-container">
        <%= render 'shared/avatar', user: project.user %>
      </div>
      <p><%= project.user.email %></p>
    </div>
  </div>
</div>
