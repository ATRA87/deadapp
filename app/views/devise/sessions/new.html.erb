<div class="container-fluid banner" style="background-image: url('https://picsum.photos/1200/600?random'), linear-gradient(-255deg, rgba(0,0,0,0.3) 0%, rgba(0,0,0,0.5) 100%);" >
  <div class="row">
    <div class="col-xs-12">
      <%= render 'shared/navbar' %>
    </div>
  </div>
  <div class="row" style="height: 100%;">
    <div class="col-xs-12 col-md-6" style="height: 100%;">
      <h1>Title</h1>
    </div>
    <div class="col-xs-12 col-md-6 sign-up-wrapper">
      <div class="sign-up-card" style="background: rgba(250,250,250,0.6);">
        <h2>Log in</h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :email,
          required: false,
          autofocus: true,
          input_html: { autocomplete: "email" }, label: false, placeholder: "appfrom@thedead.com" %>
          <%= f.input :password,
          required: false,
          input_html: { autocomplete: "current-password", class: 'auth-inputs' }, label: false, placeholder: "Password" %>
          <%= f.input :password_confirmation,
          required: true,
          input_html: { autocomplete: "new-password" }, label: false %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Go to Apps!", class:"sign-up-btn" %>
        </div>
        <% end %>
        <p id="separator">or</p>
        <%= link_to "LinkedIn", user_linkedin_omniauth_authorize_path %>
      </div>
    </div>
  </div>
</div>
