<div class="modal fade" id="chat_window" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
  <div  class="modal-dialog">
    <div class="modal-card-project" class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <div class="modal-title" id="myModalLabel" class="footer-copyright">
          <%= image_tag "logo.png", height: 70 %>
        </div>
      </div>

      <div class="modal-body">
        <div class="profile-projects">
          <% unless user.projects.empty? %>
            <h2>Chose a project to chat</h2>
            <div class="row">
              <% user.projects.each do |project| %>
                <div class="col-xs-12 col-md-6 card-wrapper">
                  <%= link_to project_path(project) do %>
                    <%= render 'projects/chat_card_link', project: project %>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% else %>
            <h2>No Projects yet</h2>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
